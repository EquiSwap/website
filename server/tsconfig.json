{
    "declaration": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    }
}