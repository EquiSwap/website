{
  "name": "@apollosoftwarexyz/cinnamon",
  "version": "0.0.36",
  "author": "Apollo Software Limited",
  "description": "Apollo Software's intuitive backend API framework.",
  "license": "MIT",
  "main": "dist/index.cjs",
  "types": "types/shim.d.ts",
  "exports": {
    ".": "./dist/index.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollosoftwarexyz/cinnamon.git",
    "directory": "distributions/cinnamon/"
  },
  "scripts": {
    "updateReadme": "cp ../../README.md ./README.md",
    "clean": "rm -rf types/; rm -rf dist/;",
    "build": "tsc --build",
    "prerelease": "ts-node --project tsconfig.utils.json utils/prerelease.ts",
    "prepublishOnly": "yarn updateReadme; yarn prerelease",
    "currentBundleSize": "ts-node --project tsconfig.utils.json utils/currentBundleSize.ts",
    "publish": "yarn npm publish --access public"
  }
}