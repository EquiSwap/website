{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./types",
        "outDir": "./dist",
        "strict": true,
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [ "ESNext" ]
    }
}
